{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@cores/*": ["src/cores/*"],
      "@features/*": ["src/features/*"],
      "@config": ["src/config"]
    }
  },
  "exclude": ["database","data"]
}
